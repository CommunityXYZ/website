#modal-new-vote.modal.modal-blur.fade(role="dialog")
  .modal-dialog(role="document"): .modal-content
    .modal-header
      h5.modal-title New vote
      button.close(data-dismiss="modal" aria-label="Close")
        i.icon(data-feather="x")

    .modal-body
      .mb-3
        .form-label Vote type
        .form-selectgroup
          label.form-selectgroup-item
            input.form-selectgroup-input(type="radio", name="voteType", value="mint", checked)
            span.form-selectgroup-label
              i.icon.mr-1(data-feather="users")
              | Mint

          label.form-selectgroup-item
            input.form-selectgroup-input(type="radio", name="voteType", value="burnVault")
            span.form-selectgroup-label
              i.icon.mr-1(data-feather="delete")
              | Burn Vault

          label.form-selectgroup-item
            input.form-selectgroup-input(type="radio", name="voteType", value="set")
            span.form-selectgroup-label
              i.icon.mr-1(data-feather="settings")
              | Set

          label.form-selectgroup-item
            input.form-selectgroup-input(type="radio", name="voteType", value="indicative")
            span.form-selectgroup-label
              i.icon.mr-1(data-feather="help-circle")
              | Indicative

          label.form-selectgroup-item
            input.form-selectgroup-input(type="radio" name="voteType" value="evolve")
            span.form-selectgroup-label
              i.icon.mr-1(data-feather="copy")
              | Evolve  

      .vote-recipient.mb-3
          label.form-label Recipient
          input#vote-recipient.form-control(type="text")
          .invalid-feedback Invalid recipient

      .vote-qty.mb-3
        label.form-label Quantity
        input#vote-qty.form-control.input-number(type="text")
        .invalid-feedback Quantity must be greater than 0.

      .vote-lock-length.mb-3(style="display: none")
        .form-label Lock length in blocks
        .input-group
          input#vote-lock-length.input-max-lock.input-number.form-control(type="text", value="0")
          a.btn-max-lock.btn.btn-success(href="#") MAX

        small.form-hint Minimum length is #[span.min-lock-length.strong] and maximum is #[span.max-lock-length.strong] blocks. If 0 is specified, there will be no lock.
        
      .vote-fields.vote-burn-vault.mb-3(style="display: none")
        label.form-label Target
        input#vote-target.form-control(type="text")
        .invalid-feedback Invalid target

      .vote-fields.vote-set(style="display: none")
        .mb-3
          label.form-label Key
          select#vote-set-key.form-select
            option(value="quorum") Quorum
            option(value="support") Support
            option(value="lockMinLength") Minimum lock length
            option(value="lockMaxLength") Maximum lock length
            option(value="role") Role
            option(value="communityDescription") Description
            option(value="communityAppUrl") App URL
            option(value="communityLogo") Community logo
            option(value="communityDiscussionLinks") Discussion links
            option(value="communityHide") Hide Community
            option(value="other") Other

        .vote-set-name.mb-3(style="display: none")
          label.vote-set-name.form-label Name
          input#vote-set-name.form-control(type="text")
          .lock-set-value-invalid.invalid-feedback  

        //- This one changes depending on what the user has selected for his form-label, 
        //- also could add .input-number to input
        .mb-3
          label.vote-set-key.form-label Value

          label#vote-set-value-is-number-label(style="display: none")
            input#vote-set-value-is-number(type="checkbox")
            |  Numeric value
          input#vote-set-value.form-control(type="text")
          textarea#vote-set-value2.form-control(style="display: none")
          select#vote-set-value3.form-control(style="display: none")
            option(value="hide") Hide
            option(value="show") Show
          .lock-set-value-invalid.invalid-feedback
          #vote-set-value-links-container(style="display: none")
            table(style="width: 100%")
              tr#vote-set-value-links-template(style="display: none")
                td(style="width: 100%")
                  input.form-control.url.is-invalid.value-url(type="text" style="width: 100%")
                td
                  input.btn.move-up-tr(type="button" value="↑")
                td
                  input.btn.move-down-tr(type="button" value="↓")
                td
                  input.btn.delete-tr(type="button" value="Del")
            input.btn#vote-set-value-links-add(type="button" value="Add")
          #vote-logo.logo-box(style="display: none;")
      
      .vote-fields.vote-evolve.mb-3(style="display: none")
        .mb-3: p #[strong Warning:] By evolving your Community you are completely replacing this PSC with a new one. The new PSC will still have the same users, balances, vaults, and more, but with the new settings in place and the new contract source.
        
        .mb-3
          label.form-label Contract source
          input#vote-contract-src.form-control.contract-src(type="text")
        
        .mb-3 
          label.form-label Community name 
          input#vote-comm-name.form-control.comm-title(type="text")

        .mb-3
          label.form-label Community ticker 
          input#vote-comm-ticker.form-control.ticker(type="text")
        
        .mb-3 
          label.form-label Community logo 
          input#vote-comm-logo.form-control.community-logo(type="text")
          .logo-box

        .mb-3
          label.form-label(for="support") Support
          .row.row-sm
            .col
              .input-group
                input#support.form-control.input-number.percent.support(type="text")
                span.input-group-text %
            .col-auto.align-self-center
              span.form-help(data-toggle="popover", data-placement="top", data-content="Support is the relative percentage of tokens that are required to vote “Yes” for a proposal to be approved. For example, if “Support” is set to 50%, then more than 50% of the tokens used to vote on a proposal must vote “Yes” for it to pass.") ?

        .mb-3
          label.form-label(for="quorum") Quorum
          .row.row-sm
            .col
              .input-group
                input#quorum.form-control.input-number.percent.quorum(type="text")
                span.input-group-text %
            .col-auto.align-self-center
              span.form-help(data-toggle="popover", data-placement="top", data-content="Quorum is how much of the vault weight is required to vote on a proposal to be approved. For example, if “Quorum” is set to 50%, then more than 50% of the vault weight must vote for it to pass.") ?

        .mb-3
          label.form-label(for="voteLength") Vote Length
          .row.row-sm
            .col
              .input-group
                input#voteLength.form-control.input-number.voteLength(type="text")
                span.input-group-text BLOCKS
            .col-auto.align-self-center
              span.form-help(data-toggle="popover", data-placement="top", data-content="For how many blocks a proposal is considered active and able to vote on it.") ?

        .mb-3
          label.form-label(for="lockMinLength") Lock Minimum Length
          .row.row-sm
            .col
              .input-group
                input#lockMinLength.form-control.input-number.lockMinLength(type="text")
                span.input-group-text BLOCKS
            .col-auto.align-self-center
              span.form-help(data-toggle="popover", data-placement="top", data-content="What is the minimum allowed lock time (in blocks) for each locked token.") ?

        .mb-3
          label.form-label(for="lockMaxLength") Lock Maximum Length
          .row.row-sm
            .col
              .input-group
                input#lockMaxLength.form-control.input-number.lockMaxLength(type="text")
                span.input-group-text BLOCKS
            .col-auto.align-self-center
              span.form-help(data-toggle="popover", data-placement="top", data-content="What is the maximum allowed lock time (in blocks) for each locked token.") ?


      .mb-3
        label.form-label Note
        textarea#vote-note.form-control
        .invalid-feedback Explain why are you creating this vote.

    .modal-footer
      div
        span.strong Fee:
        span.text-muted 
          span.tx-fee 0.25 
          | AR
      a.do-vote.btn.btn-primary.ml-auto(href="#") Create vote