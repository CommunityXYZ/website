header.navbar.navbar-light
  .container-xl
    a.navbar-brand.navbar-brand-autodark.d-none-navbar-horizontal.pr-0.pr-md-3(href="./")
      img.navbar-brand-image(src="assets/images/logo.svg" alt="CommunityXYZ")

    .navbar-nav.flex-row.order-md-last
      .statusify.nav-item.dropdown.d-none.d-md-flex.mr-3
        a.nav-link.px-0(href="#", data-toggle="dropdown", tabindex="-1")
          i(data-feather="bell")
          span.status-bg
        .dropdown-menu.dropdown-menu-right.dropdown-menu-card.dropdown-menu-arrow
          .card.card-sm
            .card-body.empty Nothing to show.
            
      .loggedin.nav-item.dropdown(style="display: none")
        a.nav-link.d-flex.lh-1.text-reset.p-0(href="#" data-toggle="dropdown")
          span.avatar.user-avatar
          .d-none.d-xl-block.pl-2
            div.user-name
            .mt-1.small.text-muted.user-role

        .dropdown-menu.dropdown-menu-right.dropdown-menu-arrow
          a.member-profile.dropdown-item(href="#!", target="_blank") 
            i.icon.dropdown-item-icon(data-feather="user")
            | Profile
          .dropdown-divider
          a.logout.dropdown-item(href="#!")
            i.icon.dropdown-item-icon(data-feather="log-out")
            | Logout
          
      .loggedout.nav-item
        a.btn.btn-primary(href="#", data-toggle="modal", data-target="#login-modal")
          i.icon(data-feather="user")
          | Login

include ../partials/login